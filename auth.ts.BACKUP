import CredentialsProvider from "next-auth/providers/credentials";
import bcrypt from "bcryptjs";
import { NextAuthOptions } from "next-auth";

export const users = [
  {
    email: "kudo75@hotmail.com",
    password: "$2b$10$tW4.1AOEGIo6nKSqGJ.w.OvzTA7VwifMPG62WOxjyeh1N/zWhT4zu"
  }
];

export const authOptions: NextAuthOptions = {
  providers: [
    CredentialsProvider({
      name: "Credentials",
      credentials: {
        email: { label: "Email", type: "text" },
        password: { label: "Password", type: "password" },
      },
      async authorize(credentials) {
        const user = users.find(u => u.email === credentials?.email);
        if (user && credentials?.password && await bcrypt.compare(credentials.password, user.password)) {
          return { id: user.email, name: user.email };
        }
        throw new Error("Invalid email or password");
      },
    }),
  ],
  session: { strategy: "jwt" },
  secret: "ONLYAI_SECRET",
  pages: {
    signIn: '/login',
  },
};
