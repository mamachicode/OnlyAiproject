datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  username  String   @unique

  // NEW: creator tier prices
  sfwPrice  Int?     @default(5)   // Minimum will be enforced in API
  nsfwPrice Int?     @default(10)

  isNsfw    Boolean  @default(false)

  posts     Post[]
}

model Post {
  id        String   @id @default(cuid())
  creator   User     @relation(fields: [creatorId], references: [id])
  creatorId String

  url       String
  publicId  String
  caption   String?
  createdAt DateTime @default(now())
}

// ----- CCBILL SUBSCRIPTIONS -----

enum SiteSection {
  SFW
  NSFW
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  CHARGEBACK
}

model Subscription {
  id                   Int                 @id @default(autoincrement())

  subscriberEmail      String       // We will match this to OnlyAI.user.email
  creatorEmail         String       // The creatorâ€™s OnlyAI email

  siteSection          SiteSection  // SFW or NSFW
  ccbillSubscriptionId String?      @unique
  status               SubscriptionStatus @default(ACTIVE)

  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
}

model BillingSubscription {
  id              Int      @id @default(autoincrement())
  subscriberUsername String
  creatorUsername    String
  siteSection        String   // "SFW" or "NSFW"
  price              Int
  status             String   // ACTIVE, CANCELLED, EXPIRED
  subscriptionId     String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([subscriberUsername, creatorUsername, siteSection])
}
